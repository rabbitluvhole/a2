{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 400,
    "width": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/rabbitluvhole/a2/refs/heads/main/data/listingprice.csv"
    },
    "transform": [
      {
        "aggregate": [
          {
            "op": "min",
            "field": "List_Price",
            "as": "min_listing_price"
          },
          {
            "op": "max",
            "field": "List_Price",
            "as": "max_listing_price"
          }
        ],
        "groupby": ["Brand"]
      }
    ],
    "encoding": {
      "y": {
        "field": "Brand",
        "type": "nominal",
        "title": "Brands",
        "sort": ["BMW", "Honda", "Toyota", "Mercedes-Benz", "Mazda"],
        "axis": {
          "offset": 3,
          "ticks": false,
          "minExtent": 70,
          "domain": false
        }
      },
      "x": {
        "field": "min_listing_price",
        "type": "quantitative",
        "title": "Listing Price",
        "scale": {"domain": [97500, 108800]}  
      },
      "tooltip": [
        {"field": "Brand", "title": "Brand"},
        {"field": "min_listing_price", "type": "quantitative", "title": "Min Listing Price"},
        {"field": "max_listing_price", "type": "quantitative", "title": "Max Listing Price"}
      ]
    },
    "layer": [
      {
        "mark": {
          "type": "rule",
          "color": "black",
          "strokeWidth": 1.5
        },
        "encoding": {
          "x": {"field": "min_listing_price"},
          "x2": {"field": "max_listing_price"}
        }
      },
      {
        "mark": {
          "type": "point",
          "filled": true,
          "size": 100
        },
        "encoding": {
          "x": {"field": "min_listing_price"},
          "color": {
            "field": "Brand",
            "type": "nominal",
            "scale": {
              "domain": ["BMW", "Honda", "Toyota", "Mercedes-Benz", "Mazda"],
              "range": ["#9f40ad", "#f01619", "#3d87c4", "#0400ff", "#ff7f00"]
            }
          }
        }
      },
      {
        "mark": {
          "type": "point",
          "filled": true,
          "size": 100
        },
        "encoding": {
          "x": {"field": "max_listing_price"},
          "color": {
            "field": "Brand",
            "type": "nominal",
            "scale": {
              "domain": ["BMW", "Honda", "Toyota", "Mercedes-Benz", "Mazda"],
              "range": ["#9f40ad", "#f01619", "#3d87c4", "#0400ff", "#ff7f00"]
            }
          }
        }
      }
    ]
  }
  